[include]
  path = ~/.gitconfig.credential
[alias]
  a       = add .
  ach     = branch -a
  adp     = add -p
  amend   = commit --amend --no-edit
  amende  = commit --amend
  author  = "!git commit --amend --no-edit --author=\"$(git config user.name) <$(git config user.email)>\""
  bd      = !git branch -d
  bdd     = !git branch --merged | grep -v '*' | xargs -I{} git branch -d {}
  bdf     = !git branch -D
  bdi     = !git branch-d-i
  c       = checkout
  cb      = !git checkout -b
  cc      = !git checkout-i
  ccb     = !git checkout-b-i
  cancel  = reset --soft HEAD^
  cmm     = commit -m
  cmminit = commit -m 'Initial Commit' --allow-empty
  d       = !git checkout develop
  dc      = diff --cached
  dev     = !git checkout develop
  develop = !git checkout develop
  df      = diff
  fp      = fetch -p
  graph   = log --oneline --graph --decorate=full
  m       = !git checkout master
  mvb     = !git branch -m
  master  = !git checkout master
  pog     = log -p
  po      = push origin
  pof     = push origin -f
  poc     = !git push origin $(git symbolic-ref --short HEAD)
  pod     = push origin develop
  pom     = push origin master
  pi      = !git push-i
  i       = !git branch-i
  pull-f  = !git fetch && git reset --hard origin/$(git rev-parse --abbrev-ref HEAD)
  r       = rebase
  ra      = rebase --abort
  rc      = rebase --continue
  ri      = !git rebase-i
  rod     = !git fetch && git rebase origin/develop
  rom     = !git fetch && git rebase origin/master
  rch     = branch -r
  sd      = stash drop
  sh      = stash
  sl      = stash list
  sp      = stash pop
  ss      = status --short --branch
  unstage = reset HEAD --
  wmm     = weed -m

  branch-i     = !git branch -a | fzf | sed -e 's/\\*//g'
  checkout-i   = !git branch-i | sed -e 's|remotes/origin/||g' | xargs git checkout
  checkout-b-i = !git branch-i | sed -e 's|remotes/origin/||g' | xargs git checkout -b
  copy-i       = !git branch-i | xargs -I BRANCH git checkout BRANCH -- $1
  push-i       = !git branch-i | xargs git push origin
  branch-d-i   = !git branch-i | sed -e 's/\\*//g' | xargs git branch -D
  rebase-i     = !git log --oneline | fzf | awk '{ print $1 }' | xargs -I{} git rebase -i {}^
[core]
  excludesfile  = ~/.gitignore
	fileMode = true
[ghq]
  root    = ~/src
[color]
	ui      = true
[pager]
	log     = diff-highlight | less
	show    = diff-highlight | less
	diff    = diff-highlight | less
[diff]
	compactionHeuristic = true
[commit]
	cleanup = strip
[grep]
	lineNumber = true
